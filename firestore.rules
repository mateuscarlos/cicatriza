rules_version = '2';

// Regras ULTRA PERMISSIVAS do Firestore apenas para DEBUGGING
// NÃO usar em produção!

service cloud.firestore {
  match /databases/{db}/documents {
    
    // Permitir tudo para qualquer pessoa (apenas para debug)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}